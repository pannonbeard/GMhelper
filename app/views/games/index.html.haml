- title "Games"

=link_to "Add Game", new_game_path, class: "btn btn-primary btn-sm"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th RPG - Type
      %th Description
      %th # of Characters
      %th
  %tbody
    - @games.each do |game|
      %tr
        %td=link_to game.name, game
        %td= game.rpg_system
        %td= game.description
        %td
        %td
          .btn-group{ role:"group"}
            =link_to "RUN IT", "#", class:"btn btn-success btn-sm"
            =link_to "Edit", edit_game_path(game), class: "btn btn-default btn-sm"
            =link_to "Destroy", game, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm"
